// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-shift-t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      // "ctrl-y": "project_symbols::Toggle",
      "ctrl-/": "editor::ToggleComments",
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-t": "terminal_panel::ToggleFocus",
      "ctrl-shift-t": "workspace::ToggleBottomDock",
      "ctrl-escape": "terminal::ToggleViMode",
      "ctrl-alt-w": "pane::CloseActiveItem",
      "ctrl-a": "editor::AcceptInlineCompletion",
      "ctrl-shift-up": "workspace::ToggleZoom",
      "tab": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
      "ctrl-shift-t": "workspace::ToggleBottomDock",
      "ctrl-alt-w": "pane::CloseActiveItem",
      "ctrl-a": "editor::AcceptInlineCompletion",
      "tab": null
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space g g": [
        "task::Spawn",
        { "task_name": "lazygit" }
        // "workspace::ToggleZoom"
      ]
    }
  }
]
